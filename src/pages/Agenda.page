<apex:page Controller="Agenda">
    <apex:relatedList list="Clase__c" />
    <apex:relatedList list="Alumnos__c" />
    <apex:relatedList list="Maestros__c" />
    <apex:form >
      <apex:pageBlock title="Agenda de Clases" >
      <p>Complete los Campos para realizar su registo</p> 
            <apex:pageBlockSection columns="3">
              <apex:inputField value="{!materia.Materia__c}"/>
              <apex:inputField value="{!alumno.Name}"/>
              <apex:inputField value="{!asistencia2.Hora__c}"/>
            </apex:pageBlockSection>
            <apex:pageBlockButtons >   
                
            <apex:commandButton action="{!save}" value="Crear Registro"  />
            </apex:pageBlockButtons>
          
                    <apex:pageBlockTable value="{!asistencia}"  var="ag">
                        
                    <apex:repeat value="{!asistencia}" var="actualizar" id="theRepeat">
                        
                        <apex:outputText value="actualizar" id="theValue"/><br/>
                    </apex:repeat>

                    <apex:column value="{! ag.Name}"/>
                    <apex:column value="{! ag.Clase__r.Materia__c}"/>
                    <apex:column value="{! ag.Alumno__c}"/>
                    <apex:column value="{! ag.Hora__c}"/>
                    
                </apex:pageBlockTable>
      </apex:pageBlock>
    </apex:form>   
</apex:page>